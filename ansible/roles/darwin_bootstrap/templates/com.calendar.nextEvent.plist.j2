<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.calendar.nextEvent</string>
	<key>ProgramArguments</key>
	<array>
		<string>{{ lookup('env', 'HOME') }}/bin/get_next_calendar_event</string>
	</array>
	<key>RunAtLoad</key>
	<true/>
	<key>StartInterval</key>
	<integer>60</integer>
	<key>StandardOutPath</key>
	<string>{{ lookup('env', 'HOME') }}/.calendar_next_event</string>
	<key>StandardErrorPath</key>
	<string>{{ lookup('env', 'HOME') }}/.calendar_next_event_error.log</string>
</dict>
</plist>
